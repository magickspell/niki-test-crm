@import '../../../common.styl'


.screenWrapper
  //background #f5f5fa
  position fixed
  top 0
  left 90px
  width 100%
  height 100%
  min-width 400px

.screen
  //background cornflowerblue //#f5f5fa
  width 100%
  height 100%

.table
  background white
  width 90%
  //max-width 800px
  min-width 400px
  height 90%
  max-height 900px
  min-height 600px
  margin 10px 0px

.head
  background #627cef
  color white
  display flex
  align-items center
  justify-content center
  flex-direction row
  width 100%
  height 40px

.row
  //background cornflowerblue
  display grid
  grid-template-columns repeat(5, 20%)
  justify-items center
  width 100%
  padding 8px

.body
  //background lightcoral
  width 100%
  height 100%
  max-height 840px
  min-height 600px
  overflow-x auto
  overflow-y auto
  coolScrollbar()

.pagination
  background white
  width 90%
  //max-width 800px
  min-width 400px
  display flex
  flex-wrap wrap
  flex-direction row
  align-items center
  justify-content flex-start
  margin 0px 0px
  padding 8px
  position fixed
  bottom 20px
  left 90px
a
  text-decoration none